@{
    Layout = "~/Views/Shared/_Layout_Set.cshtml";
}
@section CSS{

}

<div class="wrapper  animated fadeInUp">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox">
                <div class="ibox-content" ng-controller="BackgroundJobUpdateController">
                    <form class="form-horizontal m-t" id="form" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">类型：</label>
                            <div class="col-sm-8">
                                <input id="JobType" name="JobType" class="form-control" type="text" ng-model="model.JobType" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">名称：</label>
                            <div class="col-sm-8">
                                <input id="Name" name="Name" class="form-control" type="text" ng-model="model.Name" data-validation-engine="validate[required]" data-errormessage-value-missing="请输入名称" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">程序集(例如: Jobs.exe)：</label>
                            <div class="col-sm-8">
                                <input id="AssemblyName" name="AssemblyName" class="form-control" type="text" ng-model="model.AssemblyName" data-validation-engine="validate[required]" data-errormessage-value-missing="请输入程序集名称" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">类名：</label>
                            <div class="col-sm-8">
                                <input id="ClassName" name="ClassName" class="form-control" type="text" ng-model="model.ClassName" data-validation-engine="validate[required]" data-errormessage-value-missing="请输入类名" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">描述：</label>
                            <div class="col-sm-8">
                                <input id="Description" name="Description" class="form-control" type="text" ng-model="model.Description" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">参数：</label>
                            <div class="col-sm-8">
                                <input id="JobArgs" name="JobArgs" class="form-control" type="text" ng-model="model.JobArgs" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Cron表达式：</label>
                            <div class="col-sm-8">
                                <input id="CronExpression" name="CronExpression" class="form-control" type="text" ng-model="model.CronExpression" data-validation-engine="validate[required]" data-errormessage-value-missing="请输入Cron表达式" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Cron表达式描述：</label>
                            <div class="col-sm-8">
                                <input id="CronExpressionDescription" name="CronExpressionDescription" class="form-control" type="text" ng-model="model.CronExpressionDescription" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-3">
                                <button class="btn btn-primary" type="button" ng-click="SubmitUpdate()">提交</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section JS{
    <script src="/Scripts/controllers/backgroundjob.controller.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#form').validationEngine();
        })
        function Test() {
            mUtils.alertSuccess('success', function () {
                console.log('---1');
            })
        }
    </script>
}



















